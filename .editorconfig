# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[LICENSE]
insert_final_newline = false


[*.{diff,patch}]
trim_trailing_whitespace = false
